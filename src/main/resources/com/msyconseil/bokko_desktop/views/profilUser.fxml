<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.text.Text?>

<?import java.net.URL?>
<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.msyconseil.bokko_desktop.controller.ProfilUser">
    <stylesheets>
        <URL value="@styles.css" />
    </stylesheets>
    <children>
        <VBox spacing="20.0" AnchorPane.topAnchor="0.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
            <padding>
                <Insets top="20.0" right="20.0" bottom="20.0" left="20.0"/>
            </padding>
            <children>
                <HBox alignment="CENTER" spacing="20.0">
                    <ImageView fx:id="profilPicture" fitHeight="100.0" fitWidth="100.0" pickOnBounds="true" preserveRatio="true">
                        <clip>
                            <Circle centerX="50.0" centerY="50.0" radius="50.0"/>
                        </clip>
                    </ImageView>
                    <Text text="Informations utilisateur" styleClass="header-text"/>
                </HBox>

                <VBox spacing="15.0">
                    <children>
                        <HBox spacing="10.0">
                            <Text text="Nom :" styleClass="label-text"/>
                            <Text fx:id="nameText" text=""/>
                        </HBox>
                        <HBox spacing="10.0">
                            <Text text="Prénom :" styleClass="label-text"/>
                            <Text fx:id="firstNameText" text=""/>
                        </HBox>
                        <HBox spacing="10.0">
                            <Text text="E-mail :" styleClass="label-text"/>
                            <Text fx:id="emailText" text=""/>
                        </HBox>
                        <HBox spacing="10.0">
                            <Text text="Numéro de téléphone :" styleClass="label-text"/>
                            <Text fx:id="phoneNumberText" text=""/>
                        </HBox>
                        <HBox spacing="10.0">
                            <Text text="Date d'inscription :" styleClass="label-text"/>
                            <Text fx:id="dateInscriptionText" text=""/>
                        </HBox>
                        <HBox spacing="10.0">
                            <Text text="Statut :" styleClass="label-text"/>
                            <Text fx:id="statutText" text=""/>
                        </HBox>
                    </children>
                </VBox>
            </children>
        </VBox>
    </children>
</AnchorPane>
